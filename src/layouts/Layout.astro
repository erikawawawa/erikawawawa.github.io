  <style is:global>
    /* @import url("https://fonts.googleapis.com/css2?family=Martel+Sans:wght@200;300;400;600&display=swap"); */
    @import url("https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap");
    :root {
      --accent: 124, 58, 237;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        #da62c4 30%,
        white 60%
      );
    }
    html {
      font-family: "Noto Serif", serif;
      background-color: #fafafa;
      color: #000;
    }

    h1 {
      font-family: "Noto Serif", serif;
      font-size: 4.5rem;
      font-weight: 300;
      font-variation-settings: "wdth" 100;
      letter-spacing: -0.1rem;
      line-height: 100%;
      margin: 0;
    }
    h3{
      font-size: 1rem;
      font-weight: 300;
      margin: 0;

    }

    a {
      font-family: "Noto Serif", serif;
      font-weight: 300;
      color: #818181;
      text-decoration: underline;
    }
    a:hover {
      font-weight: 300;
      text-decoration: underline;
    }
    p {
      font-family: "Noto Sans", sans-serif;
      max-width: 100ch;
      color: #6c6c6c;
      /* margin: 1% 0 4%; */
      font-size: 1rem;
      font-weight: 400;
      line-height: 1.5;
      margin-bottom: 3%;
    }

    img {
      max-width: 100%;
    }
    hr {
      background-color: #6c6c6c7d; height: 0.1px; border: 0;
      /* margin: 5% 0; */
    }
    nav {
      position: sticky;
      top: 0;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      margin: 0;
      padding: 0rem 0.5rem;
      font-size: 1rem;
      background-color: #f6f6f6b3;
    }
    .nav-right > a {
      padding-left: 1.2rem;
    }
    nav > a,
    .nav-right > a {
      font-size: 1rem;
      text-decoration: none;
      line-height: 1.4;
      opacity: 0.9;
    }
    nav > a:hover,
    .nav-right > a:hover {
      text-decoration: underline;
    }
    footer {
      font-size: small;
      font-weight: 300;
      margin: 15% 0 1% 0;
      width: 100%;
      text-align: center;
    }

    @media only screen and (min-width: 768px) {
      a:hover {
        font-weight: 300;
        text-decoration: underline;
      }
      p {
        font-size: 1.1rem;
        color: #333;
        padding: 0 8%;
        margin: 1% 0 4%;
        font-weight: 300;
        line-height: 1.6;
        letter-spacing: -0.005em;
      }
      hr {
        /* margin: 5% 0; */
      }
      nav {
        padding: 1.5rem 1.8rem;
        font-size: 1.1rem;
      }
      .nav-right > a {
        padding-left: 2rem;
      }
      /* footer {
        margin: 2% 0 1% 0;
      } */
    }
  </style>
</html>
