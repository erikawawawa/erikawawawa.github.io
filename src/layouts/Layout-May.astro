:root {
  --background: #fafafa;
  --white: #ffffff;
}
.myfont{
    font-family: myfont;
    font-size: 4.5rem;
    margin: 5% 0;
    line-height: 100%;
}
.base{
    font-family: base;
    margin: 5% 0;
    line-height: 100%;
    font-size: 2rem;

}
.pearl{
    font-family: pearl;
    margin: 5% 0;
    line-height: 100%;
}

    html {
    font-family: "Public Sans", sans-serif;
      /* font-family: "Noto Serif", serif; */
      font-weight: 300;
      background-color: var(--background);
      color: #000;
    }

    body {
      margin: 0;
    }

    h1,h2,h3, p{
        font-weight: 300;
        letter-spacing: -2%;
        max-width:96%;

    }
    h1{
        font-size: 3.5rem;
        letter-spacing: -1px;
    }

      h2{
        font-size: 2.3rem;
        /* position: sticky; */
        top: 1%;
        background-color: var(--background);
      }
    
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      width: 25%;
      position: fixed;
      height: 110%;
      overflow: scroll;
    }
    
    img{
        display: inline-block;
        width: 100%;
    }
    
    li a, li h3{
      display: block;
      color: #000;
      padding: 8px 16px;
      text-decoration: none;
    }
    
    li a.active {

      background-color: blue; 
      color: white;
    }
    
    li a:hover:not(.active) {
      background-color: #827b90;
     color: white;
  
    }

    .grid-threecol {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: 1fr;
        grid-column-gap: 0.1em;
      }
