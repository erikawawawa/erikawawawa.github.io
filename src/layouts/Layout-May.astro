        @font-face {
  font-family: "myfont";
  src: url("/public/bianzhidai-Cloud.woff") format('woff');
}
       
@font-face {
  font-family: "base";
  src: url("/public/bianzhidai-Base.woff") format('woff');
}
       
@font-face {
