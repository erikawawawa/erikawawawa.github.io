---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Ellipse.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <main>
      <slot />
    </main>

    <footer>
      Â© Erika Wang 2024 | Built with <a
        style="text-decoration: underline;"
        href="https://astro.build/">Astro</a
      >
    </footer>
  </body>

  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"
  />
  <script
    is:inline
    src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
  <script is:inline>
    new Swiper(".swiper", {
      centeredSlides: true,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    });
  </script>

  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap");

    :root {
      --accent: 124, 58, 237;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        #da62c4 30%,
        white 60%
      );
    }
    .active {
    color: red;
}
    swiper-container {
      width: 100%;
      height: 100%;
    }

    swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    html {
      font-family: "Noto Serif", serif;
      background-color: #fafafa;
      color: #000;
    }

    main {
      margin: 4% 8% 0%;
      max-width: 60%;

    }

    .backbutton{
      position: fixed;
      transform: translateX(-100%);
      padding-right: 3rem;
    }

    .quote {
      font-family: "Noto Serif" sans-serif;
    }
    h1 {
      font-family: "Noto Serif", serif;
      font-size: 2.5rem;
      font-weight: 300;
      letter-spacing: -0.1rem;
      line-height: 100%;
      margin: 0.5rem 0;
    }

    h2 {
      font-size: 1.6rem;
      letter-spacing: -0.05rem;

      /* font-family: "Gelasio", serif; */
      font-weight: 300;
      /* padding: 0 8%; */
      line-height: 150%;
      margin-top: 2%;
      margin-bottom: 0;
    }
    ul,
    ol {
      font-size: 1.3rem;
      padding: 0%;
    }

    li {
      margin: 2% 6%;
    }

    h3 {
      font-weight: 400;
      color: #000;
      line-height: 1.55;
      letter-spacing: -0.005em;
    }
    .back {
      /* position: sticky; */
      bottom: 0.2rem;
      left: 1rem;
      background-color: #f6f6f6b3;
    }

    a {
      font-family: "Noto Sans", sans-serif;
      font-weight: 300;
      color: #000;
      text-decoration: none;
    }

    a:hover {
      font-weight: 300;
      text-decoration: underline;
    }
    p {
      font-family: "Noto Sans", sans-serif;
      max-width: 100ch;
      color: #505050;
      font-size: 1rem;
      font-weight: 400;
      line-height: 1.5;
      margin-bottom: 3%;
    }

    img {
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 100%;
      border: 1px solid #222;
    }

    nav {
      position: fixed;
      top: 3%;
      right: 0;
      transform: translateX(-50%);
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      margin: 0;
      padding: 0rem 0.5rem;
      font-size: 1rem;
      z-index: 9;
    }
    nav>ul{
      font-size: 1rem;
      list-style-type: none;
     
    }
    .nav-right > a {
      padding-left: 1.2rem;
    }
    nav > a,
    .nav-right > a {
      font-size: 1rem;
      text-decoration: none;
      line-height: 1.4;
      opacity: 0.9;
    }
    nav > a:hover,
    .nav-right > a:hover {
      text-decoration: underline;
    }
    footer {
      font-size: small;
      font-weight: 100;
      margin: 15% 0 1% 0;
      width: 100%;
      text-align: center;
    }
    .details {
      padding: 1% 2%;
      margin: 2% 0;
    }

    .sansserif {
      font-family: "Noto Sans", sans-serif;
      font-size: 2rem;
    }
    ul,
    ol {
      font-size: 1.2rem;
      margin-bottom: 6%;
    }

    @media only screen and (min-width: 768px) {
      ul,
      ol {
        font-size: 1.3rem;
        padding: 0 8% 1%;
      }
      a:hover {
        font-weight: 800;
        text-decoration: underline;
      }
      p {
        font-size: 0.9rem;
        font-weight: 400;
        line-height: 1.7;
        letter-spacing: -0.005em;
      }
      hr {
        margin: 5% 0;
      }
      .nav-right > a {
        padding-left: 2rem;
      }
      footer {
        margin: 2% 0 1% 0;
      }
      .grid-fourcol {
        padding: 0 2%;

        display: grid;
        grid-template-columns: 30% 30% 30% 10%;
        grid-template-rows: 1fr;
        grid-column-gap: 0.1em;
      }
      .grid-threecol {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: 1fr;
        grid-column-gap: 0.1em;
      }
      .grid-twocol {
        padding: 0 2%;
        display: grid;
        grid-template-columns: 30% 60%;
        grid-template-rows: 1fr;
        grid-column-gap: 0.1em;
      }
      .grid-twocol-even {
        padding: 0 2%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr;
        grid-column-gap: 1em;
      }
      .details {
        padding: 1% 4% 2%;
        margin: 2% 0;
      }
      .prototype {
        margin: 0 2%;
      }
      .sansserif {
        padding: 1% 8% 0;
      }
    }
  </style>
  <script>
    // Get all h1 elements within the body
const anchorArr = Array.from(document.querySelectorAll('body h2'));
let anchors = [];
anchorArr.forEach((anchor) => {
  anchors.push(anchor as HTMLElement);
  console.log(anchor);
});

// Add scroll event listener to window
window.addEventListener('scroll', function() {
    var scrollTop = document.documentElement.scrollTop || document.body.scrollTop;
    
    // Highlight the last scrolled-to: set everything inactive first
    for (var i = 0; i < anchors.length; i++) {
      // console.log(anchors[i])
      const myElement = document.querySelector('nav ul li a[href="#' + anchors[i].getAttribute('id') + '"]');  
      // console.log('a[href="#' + anchors[i].getAttribute('id') + '"]');
        myElement.classList.remove('active');
        // document.querySelector('nav ul li a[href="#' + anchors[i].getAttribute('id') + '"]').classList.remove('active');
    }
    
    // Then iterate backwards, on the first match highlight it and break
    for (var i = anchors.length - 1; i >= 0; i--) {
        if (scrollTop > anchors[i].offsetTop - 75) {
            document.querySelector('nav ul li a[href="#' + anchors[i].getAttribute('id') + '"]').classList.add('active');
            break;
        }
    }
});

  </script>
</html>

