        transform: translateY(80px);
        opacity: 0;
      }
      100% {
        -webkit-transform: translateY(0);
        transform: translateY(0);
        opacity: 1;
      }
    }

    .text-focus-in {
      -webkit-animation: text-focus-in 600ms ease-in both;
      animation: text-focus-in 600ms ease-in both;
