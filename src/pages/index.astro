<style>
  .width {
    width: 100%;
    margin-top: 5%;
  }
  .projects {
    display: flex;
    flex-wrap: nowrap;
    flex-direction: column;
    justify-content: space-between;
    margin: 5% 0;
  }
  .projects > a {
    font-size: 1.8rem;
    font-weight: 300;
    text-decoration: none;
    line-height: 1.4;
    margin: 0.5rem 0;
    color: #6c6c6c;
    white-space: nowrap;
    /* width: fit-content; */
  }
  .projects > a:hover {
    font-weight: 400;
    color: #fafafa;
    background-color: #c32828;
    /* text-decoration: underline; */
  }

  @keyframes fade-in {
    0% {
      opacity: 0.8;
    }
    100% {
      opacity: 1;
    }
  }
  .black{
    color: black;
  }
  .flex-container {
    display: flex;
    flex-direction: column-reverse;
    /* align-items: center; */
    /* justify-content: center; */
    height: 80vh;
    gap: 0rem;
    margin: 0 8%;
  }
  #topImage {
    display: none;
  }
  main {
    margin: auto;
    margin-top: 2.2rem;
    padding: 0rem 0.5rem;
    max-width: 100ch;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 300;
    margin: 0.5rem 0;
    line-height: 140%;
    max-width: 54rem;
    letter-spacing: -0.04em;
  }
  span{
    color:#818181;
  }
  h2 {
    color:#818181;
    font-size: 1.25rem;
    font-weight: 300;
    margin: 0;
    line-height: 150%;
    letter-spacing: -0.03em;

  }

  @media only screen and (min-width: 768px) {
    #topImage {
      display: inline;
      max-width: 400px;
      height: auto;
    }

    .projects > a {
      font-size: 1.6rem;
    }
    .flex-container {
      flex-direction: row;
      height: 75vh;
      gap: 2.06rem;
    }
    main {
      margin: auto;
      padding: 0rem;
      max-width: 300ch;
    }
    /* h1 {
      font-size: 2rem;
      font-weight: 800;
      margin: 0.5rem 0;
      line-height: 150%;
    } */
    /* h2 {
      font-size: 1.2rem;
      font-weight: 300;
      margin: 0;
      line-height: 150%;
    } */
    .link-card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
      gap: 1rem;
      padding: 0;
    }
  }

  @media only screen and (min-width: 1920px) {
    .projects > a {
      font-size: 1.9rem;
    }
    #topImage {
      display: inline;
    }
    .flex-container {
      flex-direction: row;
      height: 75vh;
      gap: 0rem;
    }
    main {
      margin: auto;
      padding: 0rem;
      /* max-width: 110ch; */
    }
    h1 {
      font-size: 1.5rem;
      font-weight: 800;
      margin: 0.5rem 0;
      line-height: 150%;
    }
    h2 {
      font-size: 1.5rem;
      font-weight: 200;
      margin: 0;
      line-height: 150%;
    }
    .link-card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
      gap: 1rem;
      padding: 0;
    }
    /* img {
      max-width: 400px;
    } */
  }
</style>

